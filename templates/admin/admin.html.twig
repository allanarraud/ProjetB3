{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
	<style>
		.main-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.main-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.comptesBtn {
			-moz-box-shadow: inset 0 -3px 0 0 #3dc21b;
			-webkit-box-shadow: inset 0 -3px 0 0 #3dc21b;
			box-shadow: inset 0 -3px 0 0 #3dc21b;
			background-color: ghostwhite;
			-webkit-border-radius: 5px;
			-moz-border-radius: 5px;
			border-radius: 5px;
			border: 1px solid #18ab29;
			display: inline-block;
			cursor: pointer;
			color: #ffffff;
			font-family: Arial;
			font-size: 17px;
			padding: 16px 31px;
			text-decoration: none;
			text-shadow: 0 1px 0 #2f6627;
		}
		.comptesBtn:hover {
			background-color: mintcream;
		}
	</style>

	<div class="main-wrapper">
		<h1>Panneau d'administration</h1>
		<br>
		<form action="{{ path("liste_comptes") }}">
			<button class="btn btn-primary"><i class="material-icons">person</i> Comptes</button>
		</form>
	</div>
{% endblock %}
