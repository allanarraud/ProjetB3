{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
	<style>
		.main-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.main-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="main-wrapper">
		<h1>Liste des comptes</h1>

		<table>
			<thead>
				<tr>
					<th colspan="2"><i class="material-icons">people_alt</i>Comptes utilisateurs</th>
				</tr>
			</thead>
			<tbody>
				{% for compte in lesComptes %}
					<tr>
						<td><i class="material-icons">person</i>{{ compte.id }}</td>
						<td>{{ compte.nom }}</td>
						<td>{{ compte.prenom }}</td>
						<td>{{ compte.username }}</td>
						<td>{{ compte.email }}</td>
						<td>
							{% for role in compte.roles %}
								{{ role }}
							{% endfor %}
						</td>
					</tr>
				</td>
			</tbody>
		</tr>
	{% endfor %}
</tbody></table></div>{% endblock %}
